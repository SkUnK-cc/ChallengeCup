<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <com.example.hp.challengecup.custom.CustomViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.example.hp.challengecup.custom.CustomViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clipChildren="false"
        android:orientation="vertical"
        android:background="#00000000">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/main_color_pink"
            android:layout_marginBottom="2dp"/>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_nav_height"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:background="@color/main_nav_bg">

            <!--<RadioButton-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1"-->
                <!--android:drawableTop="@mipmap/home_check"-->
                <!--android:text="首页"-->
                <!--android:button="@null"-->
                <!--android:gravity="center"/>-->
            <LinearLayout
                android:id="@+id/ll_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="5dp">
                <ImageView
                    android:id="@+id/img_home"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:src="@drawable/selector_home" />
                <TextView
                    android:id="@+id/tv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textColor="@color/selector_textcolor"
                    android:text="首页"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_community"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_community"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:src="@drawable/selector_community"/>
                <TextView
                    android:id="@+id/tv_community"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="社区"
                    android:textColor="@color/selector_textcolor"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_take_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/rect_1"
                android:layout_gravity="bottom"/>

            <LinearLayout
                android:id="@+id/ll_market"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_market"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:src="@drawable/selector_market"/>
                <TextView
                    android:id="@+id/tv_market"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="商城"
                    android:textColor="@color/selector_textcolor"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_myself"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_myself"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:src="@drawable/selector_myself" />
                <TextView
                    android:id="@+id/tv_myself"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="我的"
                    android:textColor="@color/selector_textcolor"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>