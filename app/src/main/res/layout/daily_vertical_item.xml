<?xml version="1.0" encoding="utf-8"?>
<com.skyline.widget.layout.RoundCornerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cornerRadius="4dp">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_daily_verticle_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/home_recycler_1"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_daily_verticle_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="韩国芝兰深层补水面膜"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="限时特惠"
        android:background="@drawable/bg_preferential"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>
</RelativeLayout>
</com.skyline.widget.layout.RoundCornerLayout>