<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.hp.challengecup.custom.RoundImageView
        android:id="@+id/show_picture"
        android:layout_marginTop="40dp"
        android:layout_width="230dp"
        android:layout_height="270dp"
        android:src="@drawable/ic_icon_camera"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        app:borderRadius="25dp"
        app:type="round" />
    <Button
        android:id="@+id/bt_open_camera"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_getphoto"
        android:text="拍照"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/bt_open_album"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_getphoto"
        android:text="相册"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/bt_upload"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_getphoto"
        android:text="上传图片"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>